<div class="col-sm-6 col-md-3">
  <a href="#"><h1><%= product.name %></h1></a>
  <p><%= image_tag(product.image_url, class: "img-responsive center-block") unless product.image_url.blank? %></p>
  <p><%= product.description %></p>
  <p><%= product.colour %></p>
  <p><strong><%= product.price %></strong></p>
  <hr>
  <p><%= link_to 'Show', product %></p>
  <p><%= link_to 'Edit', edit_product_path(product) %></p>
  <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
</div>